[parsing]
file_extensions = [
    "rs",
    "sh",
    "toml",
    "json",
    "yaml",
    "yml",
    "sh",
    "bash",
]
exclude_patterns = [
    "target/*",
    ".git/*",
]
include_context_lines = 3
comment_prefixes = [
    "//",
    '^\s*#',
    '/\*',
    '^\s*\*',
]
todo_patterns = [
    '(?i)\bTODO:\s*(.*)',
    '(?i)\bFIXME:\s*(.*)',
    '(?i)\bHACK:\s*(.*)',
    '(?i)\bNOTE:\s*(.*)',
    '(?i)\bBUG:\s*(.*)',
]
function_patterns = [
    '^\s*(pub\s+)?fn\s+(\w+)',
    '^\s*def\s+(\w+)',
    '^\s*(async\s+)?function\s+(\w+)',
    '^\s*(public|private|protected)?\s*(static\s+)?\w+\s+(\w+)\s*\(',
    '^\s*func\s+(\w+)',
]

[output]
dry_run = false
backup_files = true
progress_bar = true
verbose = false

[github]
owner = "glottologist"
repo = "towl"
